    </section>


    <!-- Languages -->

    <section class="languages">
        <div class="container py-3">
            <h2 class="text-center my-2">زبان های برنامه نویسی</h2>
            <div class="flex">
                <div class="card text-center">
                    <img src="../public/images/logos/node.svg.png">
                    <h4>Node.JS</h4>
                </div>
                <div class="card text-center">
                    <img src="../public/images/logos/php.png" alt="">
                    <h4>PHP</h4>
                </div>
                <div class="card text-center">
                    <img src="../public/images/logos/Java_logo_icon.png" alt="">
                    <h4>JAVA</h4>
                </div>
                <div class="card text-center">
                    <img src="../public/images/logos/csharp.png" alt="">
                    <h4>C#</h4>
                </div>
                <div class="card text-center">
                    <img src="../public/images/logos/androidstudio.png" alt="">
                    <h4>Android Studio</h4>
                </div>
