                </div>
                <div>
                    <i class="fas fa-code fa-2x"></i>
                    <h4>25850</h4>
                    <p class="text-secondary">خط کد</p>
                </div>
                <div>
                    <i class="fas fa-user-tie fa-2x"></i>
                    <h4>1</h4>
                    <p class="text-secondary">کارمندان</p>
                </div>
            </div>
        </div>
    </section>


    <!-- Projects -->

